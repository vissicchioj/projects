<?xml version="1.0" encoding="utf-8"?>
<!--Using linear layout with vertical orientation and center gravity -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/answer_text_view"
        android:text="@string/a"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--ImageView used for showing pictures along with questions-->
    <ImageView
        android:id="@+id/myimage"
        android:layout_width="700px"
        android:src="@drawable/bob_omb_battlefield"
        android:layout_height="500px"/>


    <EditText
        android:id="@+id/text_input"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:inputType="text" />

    <Button
        android:id = "@+id/confirm_button"
        android:text="Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!--PreviousButton-->
        <ImageButton
            android:id="@+id/prev_button"
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@drawable/prev"
            android:backgroundTint="#DFD2D1" />

        <!--NextButton-->
        <ImageButton
            android:id="@+id/next_button"
            android:layout_width="100px"
            android:layout_height="100px"
            android:backgroundTint="#DFD2D1"
            android:src="@drawable/next" />

    </LinearLayout>

    <TextView
        android:id="@+id/userAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/userAnswer" />
</LinearLayout>
